<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:editable="false"
        android:text="Please enter your login credentials"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="31dp"
        android:text="username"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#000000"
        android:textColor="#ffffff"
        android:minWidth="110dp" />

    <EditText
        android:id="@+id/login_uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/editText1"
        android:width="250dp"
        android:background="@drawable/border" >

    </EditText>

    <EditText
        android:id="@+id/login_pswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_uname"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/editText1"
        android:inputType="textPassword"
        android:width="150dp"
        android:background="@drawable/border" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignParentRight="true"
        android:src="@drawable/login" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/login_pswd"
        android:layout_alignBottom="@+id/login_pswd"
        android:layout_alignParentLeft="true"
        android:text="password"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#000000"
        android:textColor="#ffffff"
        android:minWidth="110dp"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_button2"
        android:text=""
        android:width="100dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_button"
        android:layout_marginBottom="60dp"
        android:layout_toRightOf="@+id/textView2"
        android:src="@drawable/tooth" />

    <TextView
        android:id="@+id/login_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_button"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="26dp"
        android:background="#000000"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"/>

</RelativeLayout>